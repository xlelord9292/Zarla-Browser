<Window x:Class="Zarla.Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:views="clr-namespace:Zarla.Browser.Views"
        Title="Zarla" Height="800" Width="1280"
        WindowState="Maximized"
        Background="{DynamicResource BackgroundBrush}">

    <Window.InputBindings>
        <KeyBinding Key="T" Modifiers="Ctrl" Command="{Binding NewTabCommand}"/>
        <KeyBinding Key="W" Modifiers="Ctrl" Command="{Binding CloseTabCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Ctrl" Command="{Binding NextTabCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Ctrl+Shift" Command="{Binding PreviousTabCommand}"/>
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{Binding FocusAddressBarCommand}"/>
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="D" Modifiers="Ctrl" Command="{Binding BookmarkCommand}"/>
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{Binding HistoryCommand}"/>
        <KeyBinding Key="J" Modifiers="Ctrl" Command="{Binding DownloadsCommand}"/>
        <KeyBinding Key="F12" Command="{Binding DevToolsCommand}"/>
        <KeyBinding Key="OemPlus" Modifiers="Ctrl" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Key="OemMinus" Modifiers="Ctrl" Command="{Binding ZoomOutCommand}"/>
        <KeyBinding Key="D0" Modifiers="Ctrl" Command="{Binding ZoomResetCommand}"/>
        <KeyBinding Key="N" Modifiers="Ctrl+Shift" Command="{Binding NewWindowCommand}"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding FindCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab Bar -->
        <Grid Grid.Row="0" Background="{DynamicResource BackgroundBrush}" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tabs ScrollViewer -->
            <ScrollViewer Grid.Column="0"
                          HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Disabled"
                          Margin="8,4,0,0">
                <StackPanel x:Name="TabStrip"
                            Orientation="Horizontal">
                    <!-- Tabs will be added here dynamically -->
                </StackPanel>
            </ScrollViewer>

            <!-- New Tab Button -->
            <Button Grid.Column="1"
                    Style="{StaticResource IconButton}"
                    Click="NewTabButton_Click"
                    ToolTip="New Tab (Ctrl+T)"
                    Margin="4,4,8,0"
                    VerticalAlignment="Top">
                <TextBlock Text="+" FontSize="20" FontWeight="Light"/>
            </Button>
        </Grid>

        <!-- Navigation Bar -->
        <Grid Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0">
                <Button x:Name="BackButton"
                        Style="{StaticResource IconButton}"
                        Click="BackButton_Click"
                        IsEnabled="False"
                        ToolTip="Back (Alt+Left)">
                    <TextBlock Text="â†" FontSize="18"/>
                </Button>
                <Button x:Name="ForwardButton"
                        Style="{StaticResource IconButton}"
                        Click="ForwardButton_Click"
                        IsEnabled="False"
                        ToolTip="Forward (Alt+Right)">
                    <TextBlock Text="â†’" FontSize="18"/>
                </Button>
                <Button x:Name="RefreshButton"
                        Style="{StaticResource IconButton}"
                        Click="RefreshButton_Click"
                        ToolTip="Refresh (F5)">
                    <TextBlock x:Name="RefreshIcon" Text="â†»" FontSize="18"/>
                </Button>
                <Button x:Name="HomeButton"
                        Style="{StaticResource IconButton}"
                        Click="HomeButton_Click"
                        ToolTip="Home">
                    <TextBlock Text="âŒ‚" FontSize="18"/>
                </Button>
            </StackPanel>

            <!-- Address Bar -->
            <Grid Grid.Column="1" Margin="8,6">
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Security Indicator Button -->
                        <Button x:Name="SecurityButton"
                                Grid.Column="0"
                                Style="{StaticResource IconButton}"
                                Click="SecurityButton_Click"
                                Padding="8,4"
                                Margin="4,0,0,0"
                                ToolTip="View site information">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="SecurityIndicator" Text="ðŸ”’" FontSize="14"/>
                                <TextBlock x:Name="SecurityText" Text="" FontSize="12"
                                           Margin="4,0,0,0" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Button>

                        <!-- URL TextBox -->
                        <TextBox x:Name="AddressBar"
                                 Grid.Column="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource TextBrush}"
                                 CaretBrush="{DynamicResource TextBrush}"
                                 FontSize="14"
                                 Padding="4,8,12,8"
                                 VerticalAlignment="Center"
                                 KeyDown="AddressBar_KeyDown"
                                 GotFocus="AddressBar_GotFocus"
                                 TextChanged="AddressBar_TextChanged"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,8,0">
                <Button x:Name="BookmarkButton"
                        Style="{StaticResource IconButton}"
                        Click="BookmarkButton_Click"
                        ToolTip="Bookmark (Ctrl+D)">
                    <TextBlock x:Name="BookmarkIcon" Text="â˜†" FontSize="18"/>
                </Button>
                <Button Style="{StaticResource IconButton}"
                        Click="DownloadsButton_Click"
                        ToolTip="Downloads (Ctrl+J)">
                    <TextBlock Text="â†“" FontSize="18"/>
                </Button>
                <Button x:Name="AIButton"
                        Style="{StaticResource IconButton}"
                        Click="AIButton_Click"
                        ToolTip="AI Assistant">
                    <TextBlock Text="AI" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                </Button>
                <Button Style="{StaticResource IconButton}"
                        Click="MenuButton_Click"
                        ToolTip="Menu">
                    <TextBlock Text="â‹®" FontSize="20" FontWeight="Bold"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Bookmarks Bar -->
        <Border x:Name="BookmarksBar"
                Grid.Row="2"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Height="32"
                Visibility="Collapsed">
            <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                <StackPanel x:Name="BookmarksPanel" Orientation="Horizontal" Margin="8,4"/>
            </ScrollViewer>
        </Border>

        <!-- Browser Content Area with AI Panel -->
        <Grid x:Name="BrowserAIGrid" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- Browser Content -->
            <Grid Grid.Column="0" x:Name="BrowserContent">
                <!-- WebView2 instances will be added here -->
            </Grid>

            <!-- Integrated AI Panel -->
            <Border x:Name="AIPanel"
                    Grid.Column="1"
                    Background="{DynamicResource BackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header with Model Selector -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Zarla AI"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextBrush}"/>
                                <!-- Model Dropdown -->
                                <ComboBox x:Name="AIPanelModelCombo"
                                          Style="{StaticResource ModernComboBox}"
                                          Width="220"
                                          Margin="0,8,0,0"
                                          HorizontalAlignment="Left"
                                          SelectionChanged="AIPanelModelCombo_SelectionChanged"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Style="{StaticResource IconButton}"
                                    Click="ClearAIChat_Click"
                                    VerticalAlignment="Top"
                                    ToolTip="Clear chat"
                                    Margin="0,0,8,0">
                                <TextBlock Text="ðŸ—‘" FontSize="14"/>
                            </Button>
                            <Button Grid.Column="2"
                                    Style="{StaticResource IconButton}"
                                    Click="CloseAIPanel_Click"
                                    VerticalAlignment="Top"
                                    ToolTip="Close">
                                <TextBlock Text="âœ•" FontSize="16" FontWeight="Bold"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Chat Content -->
                    <ScrollViewer x:Name="AIChatScrollViewer"
                                  Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Background="{DynamicResource BackgroundBrush}">
                        <StackPanel x:Name="AIChatPanel" Margin="16">
                            <!-- Welcome Message -->
                            <Border x:Name="AIWelcomePanel"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="12"
                                    Padding="20"
                                    Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ‘‹ Hey there!"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock Text="I'm your AI assistant. Ask me anything or use the quick actions below."
                                               TextWrapping="Wrap"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,8,0,0"
                                               LineHeight="20"/>
                                </StackPanel>
                            </Border>

                            <!-- Loading State -->
                            <Border x:Name="AILoadingPanel"
                                    Visibility="Collapsed"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="12"
                                    Padding="16"
                                    Margin="0,0,0,12"
                                    HorizontalAlignment="Left"
                                    MaxWidth="320">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â—â—â—"
                                               FontSize="16"
                                               Foreground="{DynamicResource AccentBrush}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Thinking..."
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Input Area -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="16">
                        <StackPanel>
                            <!-- Quick Actions -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Button Style="{StaticResource IconButton}"
                                        Padding="10,6"
                                        Margin="0,0,6,0"
                                        Click="SummarizePage_Click"
                                        ToolTip="Summarize current page">
                                    <TextBlock Text="ðŸ“ Summarize" FontSize="12"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}"
                                        Padding="10,6"
                                        Margin="0,0,6,0"
                                        Click="KeyPoints_Click"
                                        ToolTip="Extract key points">
                                    <TextBlock Text="ðŸ“Œ Key Points" FontSize="12"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}"
                                        Padding="10,6"
                                        Click="ExplainPage_Click"
                                        ToolTip="Explain page content">
                                    <TextBlock Text="ðŸ’¡ Explain" FontSize="12"/>
                                </Button>
                            </StackPanel>

                            <!-- Input Box -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="AIInput"
                                         Style="{StaticResource ModernTextBox}"
                                         Background="{DynamicResource BackgroundBrush}"
                                         KeyDown="AIInput_KeyDown"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="False"
                                         MaxHeight="100"
                                         VerticalScrollBarVisibility="Auto"/>
                                <Button Grid.Column="1"
                                        Style="{StaticResource PrimaryButton}"
                                        Click="SendAIMessage_Click"
                                        Margin="8,0,0,0"
                                        Padding="16,10"
                                        ToolTip="Send message">
                                    <TextBlock Text="â†’" FontSize="16" FontWeight="Bold"/>
                                </Button>
                            </Grid>

                            <!-- Web Search Toggle and Usage Info -->
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="AIWebSearchCheckbox"
                                          Content="ðŸŒ Search web for current info"
                                          FontSize="11"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          VerticalContentAlignment="Center"/>
                                <TextBlock x:Name="AIUsageText"
                                           Grid.Column="1"
                                           FontSize="10"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Height="24">
            <Grid Margin="8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"/>

                <TextBlock x:Name="PrivacyStats"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="16,0"/>

                <TextBlock x:Name="ZoomLevel"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"
                           Text="100%"/>
            </Grid>
        </Border>

        <!-- Menu Popup -->
        <Popup x:Name="MenuPopup"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="4"
                    Width="280">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <Button Style="{StaticResource MenuButton}" Click="NewTab_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" Width="24"/>
                            <TextBlock Text="New Tab"/>
                            <TextBlock Text="Ctrl+T" Foreground="{DynamicResource TextSecondaryBrush}" Margin="60,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButton}" Click="NewWindow_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â§‰" Width="24"/>
                            <TextBlock Text="New Window"/>
                            <TextBlock Text="Ctrl+Shift+N" Foreground="{DynamicResource TextSecondaryBrush}" Margin="30,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Separator Background="{DynamicResource BorderBrush}" Margin="8,4"/>
                    <Button Style="{StaticResource MenuButton}" Click="History_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â±" Width="24"/>
                            <TextBlock Text="History"/>
                            <TextBlock Text="Ctrl+H" Foreground="{DynamicResource TextSecondaryBrush}" Margin="75,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButton}" Click="Bookmarks_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â˜…" Width="24"/>
                            <TextBlock Text="Bookmarks"/>
                            <TextBlock Text="Ctrl+Shift+B" Foreground="{DynamicResource TextSecondaryBrush}" Margin="40,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButton}" Click="Downloads_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â†“" Width="24"/>
                            <TextBlock Text="Downloads"/>
                            <TextBlock Text="Ctrl+J" Foreground="{DynamicResource TextSecondaryBrush}" Margin="50,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Separator Background="{DynamicResource BorderBrush}" Margin="8,4"/>
                    <Button Style="{StaticResource MenuButton}" Click="ZoomIn_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" Width="24"/>
                            <TextBlock Text="Zoom In"/>
                            <TextBlock Text="Ctrl+Plus" Foreground="{DynamicResource TextSecondaryBrush}" Margin="58,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButton}" Click="ZoomOut_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="-" Width="24"/>
                            <TextBlock Text="Zoom Out"/>
                            <TextBlock Text="Ctrl+Minus" Foreground="{DynamicResource TextSecondaryBrush}" Margin="45,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Separator Background="{DynamicResource BorderBrush}" Margin="8,4"/>
                    <Button Style="{StaticResource MenuButton}" Click="Print_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ–¨" Width="24"/>
                            <TextBlock Text="Print"/>
                            <TextBlock Text="Ctrl+P" Foreground="{DynamicResource TextSecondaryBrush}" Margin="90,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButton}" Click="Find_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”" Width="24"/>
                            <TextBlock Text="Find in Page"/>
                            <TextBlock Text="Ctrl+F" Foreground="{DynamicResource TextSecondaryBrush}" Margin="48,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Separator Background="{DynamicResource BorderBrush}" Margin="8,4"/>
                    <Button Style="{StaticResource MenuButton}" Click="DevTools_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”§" Width="24"/>
                            <TextBlock Text="Developer Tools"/>
                            <TextBlock Text="F12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="32,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Separator Background="{DynamicResource BorderBrush}" Margin="8,4"/>
                    <Button Style="{StaticResource MenuButton}" Click="AIAssistant_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ¤–" Width="24"/>
                            <TextBlock Text="AI Assistant"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButton}" Click="Extensions_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ§©" Width="24"/>
                            <TextBlock Text="Extensions"/>
                        </StackPanel>
                    </Button>
                    <Separator Background="{DynamicResource BorderBrush}" Margin="8,4"/>
                    <Button Style="{StaticResource MenuButton}" Click="Settings_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™" Width="24"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MenuButton}" Click="About_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â„¹" Width="24"/>
                            <TextBlock Text="About Zarla"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Find Bar -->
        <Border x:Name="FindBar"
                Grid.Row="3"
                Panel.ZIndex="100"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="8"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="FindTextBox"
                         Width="250"
                         Style="{StaticResource AddressBarTextBox}"
                         KeyDown="FindTextBox_KeyDown"/>
                <TextBlock x:Name="FindResults"
                           VerticalAlignment="Center"
                           Margin="8,0"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                <Button Style="{StaticResource IconButton}" Click="FindPrevious_Click">
                    <TextBlock Text="â†‘"/>
                </Button>
                <Button Style="{StaticResource IconButton}" Click="FindNext_Click">
                    <TextBlock Text="â†“"/>
                </Button>
                <Button Style="{StaticResource IconButton}" Click="FindClose_Click">
                    <TextBlock Text="âœ•"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Security Info Popup -->
        <Popup x:Name="SecurityPopup"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16"
                    Width="350">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Security Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock x:Name="SecurityPopupIcon" Text="ðŸ”’" FontSize="24" VerticalAlignment="Center"/>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock x:Name="SecurityPopupTitle" Text="Connection is secure"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock x:Name="SecurityPopupSubtitle" Text="Your information is private"
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,12"/>

                    <!-- Certificate Info -->
                    <TextBlock Text="Certificate" FontSize="12" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Issued to:" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="CertIssuedTo" Grid.Column="1" Text="example.com" FontSize="12"
                                   Foreground="{DynamicResource TextBrush}" TextTrimming="CharacterEllipsis"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Issued by:" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="CertIssuedBy" Grid.Column="1" Text="Certificate Authority" FontSize="12"
                                   Foreground="{DynamicResource TextBrush}" TextTrimming="CharacterEllipsis"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Protocol:" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="CertProtocol" Grid.Column="1" Text="TLS 1.3" FontSize="12"
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Grid>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,12"/>

                    <!-- Privacy Stats for this site -->
                    <TextBlock Text="Privacy Protection" FontSize="12" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="ðŸ›¡ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="SiteAdsBlocked" Text="0 ads blocked on this site"
                                   FontSize="12" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="ðŸ”’" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="SiteTrackersBlocked" Text="0 trackers blocked on this site"
                                   FontSize="12" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="FingerprintStatus" Text="Fingerprint protection active"
                                   FontSize="12" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Save Password Popup (Chrome-like) -->
        <Border x:Name="SavePasswordPopupContainer"
                Visibility="Collapsed"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,90,100,0">
            <views:SavePasswordPopup x:Name="SavePasswordPopup"/>
        </Border>
    </Grid>
</Window>
