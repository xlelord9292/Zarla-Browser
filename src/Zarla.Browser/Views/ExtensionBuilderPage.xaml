<UserControl x:Class="Zarla.Browser.Views.ExtensionBuilderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#1a1a1a">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Block Palette -->
        <Border Grid.Column="0" Background="#202020" BorderBrush="#333" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#252525" Padding="16" BorderBrush="#333" BorderThickness="0,0,0,1">
                    <TextBlock Text="Block Palette" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="BlockPalette" Margin="12">
                        <!-- Blocks will be added dynamically by category -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Center Panel: Extension Editor -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#202020" Padding="20,16" BorderBrush="#333" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBox x:Name="ExtensionName" Text="New Extension"
                                 FontSize="20" FontWeight="SemiBold" Foreground="White"
                                 Background="Transparent" BorderThickness="0"
                                 TextChanged="ExtensionName_TextChanged"/>
                        <TextBox x:Name="ExtensionDescription" Text="Description..."
                                 FontSize="13" Foreground="#888"
                                 Background="Transparent" BorderThickness="0"
                                 Margin="0,4,0,0"
                                 TextChanged="ExtensionDescription_TextChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="SaveButton" Content="ðŸ’¾ Save" Click="Save_Click"
                                Background="#8ab4f8" Foreground="#1a1a1a"
                                Padding="16,8" Margin="0,0,8,0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="ðŸ“¤ Export" Click="Export_Click"
                                Background="Transparent" Foreground="#8ab4f8"
                                BorderBrush="#8ab4f8" BorderThickness="1"
                                Padding="16,8" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Site Restrictions -->
            <Border Grid.Row="1" Background="#1e1e1e" Padding="16" BorderBrush="#333" BorderThickness="0,0,0,1">
                <StackPanel>
                    <TextBlock Text="Active on sites (leave empty for all sites):"
                               FontSize="12" Foreground="#888" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ActiveSitesInput"
                                 Text=""
                                 FontSize="13" Foreground="White"
                                 Background="#252525" BorderBrush="#444" BorderThickness="1"
                                 Padding="10,8" VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1" Content="+ Add" Click="AddSite_Click"
                                Background="#333" Foreground="White"
                                Padding="12,8" Margin="8,0,0,0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    <WrapPanel x:Name="ActiveSitesPanel" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Blocks List -->
            <Border Grid.Row="2" Background="#1a1a1a">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Padding="16,12" Background="#1e1e1e" BorderBrush="#333" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Blocks" FontSize="14" FontWeight="SemiBold" Foreground="White"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="BlockCount" Text="(0)" FontSize="13" Foreground="#666"
                                       Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="BlocksList" Margin="16">
                            <!-- Empty state -->
                            <Border x:Name="EmptyBlocksState" Background="#252525" CornerRadius="8"
                                    Padding="40" HorizontalAlignment="Center" Margin="0,40,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ§±" FontSize="40" HorizontalAlignment="Center"/>
                                    <TextBlock Text="No blocks yet" FontSize="16" Foreground="White"
                                               HorizontalAlignment="Center" Margin="0,12,0,4"/>
                                    <TextBlock Text="Drag blocks from the palette on the left to add actions"
                                               FontSize="13" Foreground="#888" TextAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Panel: Block Configuration -->
        <Border Grid.Column="2" x:Name="ConfigPanel" Background="#202020"
                BorderBrush="#333" BorderThickness="1,0,0,0" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Background="#252525" Padding="16" BorderBrush="#333" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="ConfigBlockIcon" Text="ðŸ§©" FontSize="20"/>
                            <TextBlock x:Name="ConfigBlockType" Text="Block Configuration"
                                       FontSize="14" FontWeight="SemiBold" Foreground="White"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="âœ•" Click="CloseConfig_Click"
                                Background="Transparent" Foreground="#888"
                                FontSize="16" Padding="8" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel x:Name="ConfigFields">
                        <!-- Configuration fields will be added dynamically -->
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Padding="16" BorderBrush="#333" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <CheckBox x:Name="BlockEnabledCheckbox" Content="Block enabled"
                                  Foreground="White" IsChecked="True"
                                  Checked="BlockEnabled_Changed" Unchecked="BlockEnabled_Changed"/>
                        <Button Content="ðŸ—‘ï¸ Remove Block" Click="RemoveBlock_Click"
                                Background="#3d2020" Foreground="#ff6b6b"
                                Padding="12,8" Margin="0,12,0,0" Cursor="Hand"
                                HorizontalAlignment="Stretch">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
