<Window x:Class="Zarla.Browser.Views.AddModelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Custom Model"
        Width="500"
        Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Add Custom AI Model"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBlock Text="Configure your own AI model with a custom API"
                       FontSize="13"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Model Name -->
            <TextBlock Text="Display Name"
                       FontSize="13"
                       FontWeight="Medium"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="ModelNameTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,0,16"/>

            <!-- Model ID -->
            <TextBlock Text="Model ID"
                       FontSize="13"
                       FontWeight="Medium"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="ModelIdTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,0,4"/>
            <TextBlock Text="e.g., gpt-4, claude-3-opus, llama-70b"
                       FontSize="11"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,0,0,16"/>

            <!-- API Key (Optional) -->
            <TextBlock Text="API Key (Optional)"
                       FontSize="13"
                       FontWeight="Medium"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="ApiKeyTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,0,16"/>

            <!-- Base URL (Optional) -->
            <TextBlock Text="API Base URL (Optional)"
                       FontSize="13"
                       FontWeight="Medium"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="BaseUrlTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,0,4"/>
            <TextBlock Text="e.g., https://api.openai.com/v1 â€¢ Leave empty for Groq"
                       FontSize="11"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,0,0,16"/>

            <!-- Daily Limit -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Daily Limit"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="Maximum requests per day"
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
                <TextBox x:Name="DailyLimitTextBox"
                         Grid.Column="1"
                         Style="{StaticResource ModernTextBox}"
                         Text="50"/>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="Cancel"
                    Style="{StaticResource ModernButton}"
                    Width="100"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button Content="Add Model"
                    Style="{StaticResource PrimaryButton}"
                    Width="120"
                    Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
