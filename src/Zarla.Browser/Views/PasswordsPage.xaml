<UserControl x:Class="Zarla.Browser.Views.PasswordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="PasswordTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#8ab4f8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#8ab4f8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Background" Value="#8ab4f8"/>
            <Setter Property="Foreground" Value="#1a1a1a"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#9dc4ff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7aa4e8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="#8ab4f8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#404040"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1a1a1a" Padding="32,24" BorderBrush="#2a2a2a" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="44" Height="44" CornerRadius="10" Background="#2a4a6a" Margin="0,0,16,0">
                        <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   Foreground="#8ab4f8"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Passwords" FontSize="22" FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="Securely manage your saved passwords" FontSize="13"
                                   Foreground="#666" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Search Box -->
                    <Border x:Name="SearchBox" Background="#252525" CornerRadius="8" Padding="12,10" Margin="0,0,16,0"
                            BorderBrush="#333" BorderThickness="1" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                       Foreground="#666" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="SearchTextBox" Background="Transparent" BorderThickness="0"
                                     Foreground="White" Width="220" FontSize="14"
                                     VerticalAlignment="Center"
                                     TextChanged="SearchBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="CaretBrush" Value="White"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <Button x:Name="AddPasswordButton" Click="AddPassword_Click" Style="{StaticResource PrimaryBtn}"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Password"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Locked State -->
            <Border x:Name="LockedPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="#1a1a1a" CornerRadius="16" Padding="48" MaxWidth="420"
                        BorderBrush="#2a2a2a" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="80" Height="80" CornerRadius="40" Background="#252525"
                                HorizontalAlignment="Center" Margin="0,0,0,28">
                            <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                                       Foreground="#8ab4f8"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="LockTitle" Text="Unlock Password Manager" FontSize="20"
                                   Foreground="White" HorizontalAlignment="Center" TextAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="LockSubtitle" Text="Enter your master password to access your saved passwords."
                                   Foreground="#777" HorizontalAlignment="Center" Margin="0,12,0,28"
                                   FontSize="14" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="320"/>

                        <PasswordBox x:Name="MasterPasswordBox" Width="320"
                                     Style="{StaticResource ModernPasswordBox}"
                                     Margin="0,0,0,12"
                                     KeyDown="MasterPasswordBox_KeyDown"/>

                        <PasswordBox x:Name="ConfirmPasswordBox" Width="320"
                                     Style="{StaticResource ModernPasswordBox}"
                                     Margin="0,0,0,16" Visibility="Collapsed"
                                     KeyDown="MasterPasswordBox_KeyDown"/>

                        <TextBlock x:Name="ErrorText" Text="" Foreground="#ff6b6b" FontSize="13"
                                   HorizontalAlignment="Center" Margin="0,0,0,16" Visibility="Collapsed"
                                   TextWrapping="Wrap" TextAlignment="Center" MaxWidth="300"/>

                        <Button x:Name="UnlockButton" Click="Unlock_Click" Style="{StaticResource PrimaryBtn}"
                                Width="320" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE785;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock x:Name="UnlockButtonText" Text="Unlock"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Border>

            <!-- Passwords List -->
            <ScrollViewer x:Name="PasswordsScrollViewer" VerticalScrollBarVisibility="Auto"
                          Padding="32,28" Visibility="Collapsed">
                <StackPanel MaxWidth="900" HorizontalAlignment="Center">
                    <!-- Empty State -->
                    <Border x:Name="EmptyState" Background="#1a1a1a" CornerRadius="16"
                            Padding="60" Visibility="Collapsed" HorizontalAlignment="Center"
                            BorderBrush="#2a2a2a" BorderThickness="1">
                        <StackPanel HorizontalAlignment="Center" MaxWidth="360">
                            <Border Width="72" Height="72" CornerRadius="36" Background="#252525"
                                    HorizontalAlignment="Center" Margin="0,0,0,24">
                                <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="28"
                                           Foreground="#8ab4f8"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="No saved passwords" FontSize="18" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center" TextAlignment="Center"/>
                            <TextBlock Text="Your saved passwords will appear here. Click 'Add Password' to save your first password securely."
                                       Foreground="#666" HorizontalAlignment="Center" Margin="0,12,0,24"
                                       FontSize="14" TextWrapping="Wrap" TextAlignment="Center"/>
                            <Button Click="AddPassword_Click" Style="{StaticResource PrimaryBtn}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Add Your First Password"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Password Cards -->
                    <ItemsControl x:Name="PasswordsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1a1a1a" CornerRadius="12"
                                        Margin="0,0,0,12" Padding="20"
                                        BorderBrush="#252525" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="52"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Border Width="44" Height="44" CornerRadius="10" Background="#252525"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="&#xEB41;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                                       Foreground="#8ab4f8"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Info -->
                                        <StackPanel Grid.Column="1" Margin="16,0,16,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Website}" FontWeight="SemiBold"
                                                       FontSize="15" Foreground="White"/>
                                            <TextBlock Text="{Binding Username}"
                                                       Foreground="#888" FontSize="13" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="Copy" Tag="{Binding Id}"
                                                    Click="CopyPassword_Click"
                                                    Style="{StaticResource ActionBtn}"
                                                    Margin="0,0,8,0"/>
                                            <Button Tag="{Binding Id}"
                                                    Click="EditPassword_Click"
                                                    Style="{StaticResource SecondaryBtn}"
                                                    Padding="10,8">
                                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                            </Button>
                                            <Button Tag="{Binding Id}"
                                                    Click="DeletePassword_Click"
                                                    Padding="10,8" Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="#ff6b6b"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border x:Name="border" Background="{TemplateBinding Background}"
                                                                            CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="border" Property="Background" Value="#3a2020"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Add/Edit Password Dialog -->
        <Border x:Name="PasswordDialog" Background="#80000000" Visibility="Collapsed">
            <Border Background="#1a1a1a" CornerRadius="16" Padding="32"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MinWidth="440" MaxWidth="500"
                    BorderBrush="#2a2a2a" BorderThickness="1">
                <StackPanel>
                    <TextBlock x:Name="DialogTitle" Text="Add Password" FontSize="20"
                               Foreground="White" FontWeight="SemiBold" Margin="0,0,0,24"/>

                    <TextBlock Text="Website" Foreground="#888" FontSize="12" FontWeight="Medium" Margin="0,0,0,8"/>
                    <TextBox x:Name="DialogWebsite" Style="{StaticResource PasswordTextBox}" Margin="0,0,0,16"/>

                    <TextBlock Text="Username / Email" Foreground="#888" FontSize="12" FontWeight="Medium" Margin="0,0,0,8"/>
                    <TextBox x:Name="DialogUsername" Style="{StaticResource PasswordTextBox}" Margin="0,0,0,16"/>

                    <TextBlock Text="Password" Foreground="#888" FontSize="12" FontWeight="Medium" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="DialogPassword" Margin="0,0,8,0">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource PasswordTextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="#2d2d2d"
                                                        BorderBrush="#404040"
                                                        BorderThickness="1"
                                                        CornerRadius="8,0,0,8">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="14,12"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="#8ab4f8"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Grid.Column="1" Click="GeneratePassword_Click" Cursor="Hand"
                                ToolTip="Generate secure password">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#333"/>
                                    <Setter Property="Foreground" Value="#8ab4f8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}"
                                                        CornerRadius="0,8,8,0" Padding="16,12">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="&#xE8B1;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                        <TextBlock Text="Generate" FontSize="13"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#404040"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <TextBlock Text="Notes (optional)" Foreground="#888" FontSize="12" FontWeight="Medium" Margin="0,0,0,8"/>
                    <TextBox x:Name="DialogNotes" Style="{StaticResource PasswordTextBox}"
                             Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                             Margin="0,0,0,28"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Click="CancelDialog_Click" Style="{StaticResource SecondaryBtn}"
                                Margin="0,0,12,0"/>
                        <Button x:Name="SaveButton" Click="SaveDialog_Click" Style="{StaticResource PrimaryBtn}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Save Password"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
