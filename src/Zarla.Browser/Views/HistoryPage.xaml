<UserControl x:Class="Zarla.Browser.Views.HistoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="History"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="SearchBox"
                         Grid.Column="1"
                         Width="300"
                         Style="{StaticResource AddressBarTextBox}"
                         TextChanged="SearchBox_TextChanged"
                         Margin="0,0,16,0"/>

                <Button Grid.Column="2"
                        Style="{StaticResource PrimaryButton}"
                        Content="Clear History"
                        Click="ClearHistory_Click"/>
            </Grid>
        </Border>

        <!-- History List -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <ItemsControl x:Name="HistoryList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistoryItem_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Favicon placeholder -->
                                <Border Grid.Column="0"
                                        Width="32" Height="32"
                                        CornerRadius="4"
                                        Background="{DynamicResource BackgroundBrush}"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="{Binding Initial}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource AccentBrush}"/>
                                </Border>

                                <!-- Title and URL -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Url}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Visit count -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding VisitCountText}"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="16,0"/>

                                <!-- Time -->
                                <TextBlock Grid.Column="3"
                                           Text="{Binding TimeAgo}"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Width="100"
                                           TextAlignment="Right"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel x:Name="EmptyState"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <TextBlock Text="ðŸ“œ"
                       FontSize="64"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="No browsing history"
                       FontSize="18"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
