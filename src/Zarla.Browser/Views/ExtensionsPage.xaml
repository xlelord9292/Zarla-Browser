<UserControl x:Class="Zarla.Browser.Views.ExtensionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#1a1a1a">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#202020" Padding="32,20" BorderBrush="#333" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ§©" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Zarla Extensions" FontSize="24" FontWeight="Normal"
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ImportButton" Click="Import_Click"
                            Background="Transparent" Foreground="#8ab4f8"
                            BorderBrush="#8ab4f8" BorderThickness="1"
                            Padding="16,8" Cursor="Hand" FontSize="13" Margin="0,0,12,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="ðŸ“¥ Import"/>
                    </Button>

                    <Button x:Name="CreateButton" Click="CreateExtension_Click"
                            Background="#8ab4f8" Foreground="#1a1a1a"
                            BorderThickness="0"
                            Padding="16,8" Cursor="Hand" FontSize="13">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="+ Create Extension" FontWeight="SemiBold"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32,24">
            <StackPanel>
                <!-- My Extensions Section -->
                <TextBlock Text="My Extensions" FontSize="16" FontWeight="SemiBold"
                           Foreground="White" Margin="0,0,0,16"/>

                <!-- Empty State for My Extensions -->
                <Border x:Name="EmptyState" Background="#252525" CornerRadius="8"
                        Padding="40" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,0,0,32">
                    <StackPanel HorizontalAlignment="Center" MaxWidth="400">
                        <Border Width="64" Height="64" CornerRadius="32" Background="#333"
                                HorizontalAlignment="Center" Margin="0,0,0,16">
                            <TextBlock Text="âœ¨" FontSize="28"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="No extensions yet" FontSize="16"
                                   Foreground="White" HorizontalAlignment="Center" TextAlignment="Center"/>
                        <TextBlock Text="Create your own extensions using the easy block-based builder, or install from templates below."
                                   Foreground="#888" HorizontalAlignment="Center" Margin="0,12,0,24"
                                   FontSize="13" TextWrapping="Wrap" TextAlignment="Center"/>
                        <Button Click="CreateExtension_Click" Background="#8ab4f8" Foreground="#1a1a1a"
                                BorderThickness="0" Padding="24,10" Cursor="Hand" FontSize="13"
                                FontWeight="SemiBold" HorizontalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="+ Create Your First Extension"/>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Extensions Grid -->
                <ItemsControl x:Name="ExtensionsList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="380" Background="#252525" CornerRadius="8"
                                    Margin="0,0,16,16" Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="48"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Border Width="40" Height="40" CornerRadius="8" Background="#333"
                                            VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Icon}" FontSize="20"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="1" Margin="12,0,12,0">
                                        <TextBlock Text="{Binding Name}" FontWeight="Medium"
                                                   FontSize="14" Foreground="White"/>
                                        <TextBlock Text="{Binding Description}"
                                                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis"
                                                   MaxHeight="36" Foreground="#888" FontSize="12"
                                                   Margin="0,4,0,8"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" Tag="{Binding Id}"
                                                    Click="EditExtension_Click"
                                                    Background="Transparent" Foreground="#8ab4f8"
                                                    BorderThickness="0" Padding="0" Cursor="Hand"
                                                    FontSize="12"/>
                                            <TextBlock Text="  â€¢  " Foreground="#555"/>
                                            <Button Content="Export" Tag="{Binding Id}"
                                                    Click="ExportExtension_Click"
                                                    Background="Transparent" Foreground="#8ab4f8"
                                                    BorderThickness="0" Padding="0" Cursor="Hand"
                                                    FontSize="12"/>
                                            <TextBlock Text="  â€¢  " Foreground="#555"/>
                                            <Button Content="Remove" Tag="{Binding Id}"
                                                    Click="RemoveExtension_Click"
                                                    Background="Transparent" Foreground="#888"
                                                    BorderThickness="0" Padding="0" Cursor="Hand"
                                                    FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Toggle -->
                                    <ToggleButton Grid.Column="2" IsChecked="{Binding IsEnabled}"
                                                  Click="ToggleExtension_Click" Tag="{Binding Id}"
                                                  Width="36" Height="20" VerticalAlignment="Top" Margin="0,2,0,0">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="Track" Width="36" Height="20"
                                                        CornerRadius="10" Background="#555" Cursor="Hand">
                                                    <Border x:Name="Thumb" Width="16" Height="16"
                                                            CornerRadius="8" Background="White"
                                                            HorizontalAlignment="Left" Margin="2"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Track" Property="Background" Value="#8ab4f8"/>
                                                        <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Templates Section -->
                <TextBlock Text="Built-in Templates" FontSize="16" FontWeight="SemiBold"
                           Foreground="White" Margin="0,24,0,8"/>
                <TextBlock Text="Ready-to-use extensions you can install with one click"
                           FontSize="13" Foreground="#888" Margin="0,0,0,16"/>

                <ItemsControl x:Name="TemplatesList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="280" Background="#252525" CornerRadius="8"
                                    Margin="0,0,12,12" Padding="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#333">
                                            <TextBlock Text="{Binding Icon}" FontSize="18"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"
                                                       FontSize="13" Foreground="White"/>
                                            <TextBlock Text="{Binding Author}" FontSize="11"
                                                       Foreground="#666"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="1" Text="{Binding Description}"
                                               TextWrapping="Wrap"
                                               Foreground="#aaa" FontSize="12"
                                               Margin="0,12,0,12"/>

                                    <!-- Install Button -->
                                    <Button Grid.Row="2" Content="+ Install" Tag="{Binding Id}"
                                            Click="InstallTemplate_Click"
                                            Background="#333" Foreground="White"
                                            Padding="0,8" Cursor="Hand" FontSize="12"
                                            HorizontalAlignment="Stretch">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
