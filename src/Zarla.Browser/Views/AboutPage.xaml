<UserControl x:Class="Zarla.Browser.Views.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="0,20,0,40">
            <StackPanel VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        MaxWidth="500">
                <!-- Logo -->
                <Border Width="120" Height="120"
                        CornerRadius="24"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF6B35" Offset="0"/>
                            <GradientStop Color="#FF8B4C" Offset="0.5"/>
                            <GradientStop Color="#FF4D2D" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <!-- Z Logo with shield-like shape inspired by Brave -->
                        <TextBlock Text="Z"
                                   FontSize="72"
                                   FontWeight="ExtraBold"
                                   FontFamily="Segoe UI"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,-4,0,0"/>
                    </Grid>
                </Border>

                <!-- Name -->
                <TextBlock x:Name="BrowserNameText"
                           Text="Zarla Browser"
                           FontSize="32"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           HorizontalAlignment="Center"/>

                <!-- Version -->
                <TextBlock x:Name="VersionText"
                           Text="Version 1.0.1"
                           FontSize="16"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>

                <!-- Update Section -->
                <Border x:Name="UpdatePanel"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,20,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock x:Name="UpdateStatusText"
                                       Text="Check for updates"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock x:Name="UpdateSubText"
                                       Text="Click the button to check for new versions"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <Button x:Name="CheckUpdateButton"
                                Grid.Column="1"
                                Content="Check Now"
                                Style="{StaticResource PrimaryButton}"
                                Padding="16,8"
                                Click="CheckUpdate_Click"/>
                    </Grid>
                </Border>

                <!-- Update Available Panel (hidden by default) -->
                <Border x:Name="UpdateAvailablePanel"
                        Visibility="Collapsed"
                        Background="#2d3a2d"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,12,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="ðŸŽ‰" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="NewVersionText"
                                       Text="New version available!"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#00b894"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock x:Name="ReleaseNotesText"
                                   Grid.Row="1"
                                   Text=""
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"
                                   MaxHeight="100"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                            <Button x:Name="DownloadUpdateButton"
                                    Content="Download Update"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="16,8"
                                    Click="DownloadUpdate_Click"/>
                            <Button x:Name="ViewReleaseButton"
                                    Content="View Release"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="16,8"
                                    Margin="8,0,0,0"
                                    Click="ViewRelease_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Download Progress Panel -->
                <Border x:Name="DownloadProgressPanel"
                        Visibility="Collapsed"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock x:Name="DownloadStatusText"
                                   Text="Downloading update..."
                                   FontSize="14"
                                   Foreground="{DynamicResource TextBrush}"/>
                        <ProgressBar x:Name="DownloadProgressBar"
                                     Height="6"
                                     Margin="0,12,0,0"
                                     Background="{DynamicResource BackgroundBrush}"
                                     Foreground="{DynamicResource AccentBrush}"
                                     BorderThickness="0"/>
                        <TextBlock x:Name="DownloadProgressText"
                                   Text="0%"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Description -->
                <TextBlock Text="A fast, lightweight, privacy-focused web browser"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>

                <!-- Features -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="24"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Features"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ›¡ï¸" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Built-in ad and tracker blocking"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ”’" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Fingerprint protection"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ¤–" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Built-in AI assistant"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ”‘" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Secure password manager"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âš¡" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Tab suspension for memory savings"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ§©" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Chrome &amp; Edge extension support"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="ðŸŽ¨" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Modern dark and light themes"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”§" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Developer tools included"
                                       Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Tech Stack -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="24"
                        Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Built With"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text=".NET 8 / .NET 9"
                                           Foreground="{DynamicResource TextBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="WPF"
                                           Foreground="{DynamicResource TextBrush}"
                                           Margin="0,0,0,4"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="WebView2 (Chromium)"
                                           Foreground="{DynamicResource TextBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="SQLite"
                                           Foreground="{DynamicResource TextBrush}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Open Source Notice -->
                <TextBlock Text="Open Source â€¢ MIT License"
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>

                <TextBlock x:Name="GitHubLink"
                           Text="github.com/xlelord9292/Zarla-Browser"
                           FontSize="12"
                           Foreground="{DynamicResource AccentBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"
                           Cursor="Hand"
                           MouseLeftButtonUp="GitHubLink_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
