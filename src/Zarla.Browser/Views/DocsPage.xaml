<UserControl x:Class="Zarla.Browser.Views.DocsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="20,24,20,24">
                    <TextBlock Text="üìö Zarla Docs"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="Learn how to use Zarla Browser"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Navigation Items -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="NavPanel" Margin="8,0,8,20">
                        <RadioButton Style="{StaticResource NavButton}" 
                                     Content="üè†  Getting Started" IsChecked="True"
                                     Checked="NavButton_Checked" Tag="GettingStarted"/>
                        <RadioButton Style="{StaticResource NavButton}" 
                                     Content="üîí  Security"
                                     Checked="NavButton_Checked" Tag="Security"/>
                        <RadioButton Style="{StaticResource NavButton}" 
                                     Content="üõ°Ô∏è  Privacy Features"
                                     Checked="NavButton_Checked" Tag="Privacy"/>
                        <RadioButton Style="{StaticResource NavButton}" 
                                     Content="ü§ñ  AI Assistant"
                                     Checked="NavButton_Checked" Tag="AI"/>
                        <RadioButton Style="{StaticResource NavButton}" 
                                     Content="üåê  Network &amp; DNS"
                                     Checked="NavButton_Checked" Tag="Network"/>
                        <RadioButton Style="{StaticResource NavButton}"
                                     Content="‚ö†Ô∏è  Error Codes"
                                     Checked="NavButton_Checked" Tag="ErrorCodes"/>
                        <RadioButton Style="{StaticResource NavButton}"
                                     Content="‚å®Ô∏è  Keyboard Shortcuts"
                                     Checked="NavButton_Checked" Tag="Shortcuts"/>
                        <RadioButton Style="{StaticResource NavButton}"
                                     Content="‚ùì  FAQ"
                                     Checked="NavButton_Checked" Tag="FAQ"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="40,24,40,40">
            <StackPanel MaxWidth="800">

                <!-- Getting Started Section -->
                <StackPanel x:Name="GettingStartedSection">
                    <TextBlock Text="Getting Started"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Welcome to Zarla Browser!"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,24"/>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="What is Zarla?"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="14"
                                       LineHeight="24">
                                Zarla is a privacy-focused web browser built with security and performance in mind. 
                                It features built-in ad blocking, tracker protection, AI assistance, and advanced 
                                security scanning to keep you safe while browsing.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Quick Start Guide"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            
                            <StackPanel Margin="0,8,0,0">
                                <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4">1. Navigate to Websites</TextBlock>
                                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="16,0,0,12">
                                    Type a URL in the address bar and press Enter. You can also type search terms to search the web.
                                </TextBlock>

                                <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4">2. Open Settings</TextBlock>
                                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="16,0,0,12">
                                    Click the menu button (‚ãÆ) in the top right corner and select "Settings", or navigate to zarla://settings.
                                </TextBlock>

                                <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4">3. Use AI Assistant</TextBlock>
                                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="16,0,0,12">
                                    Click the "AI" button in the toolbar to open the AI panel. You can chat or ask it to summarize pages.
                                </TextBlock>

                                <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4">4. Manage Tabs</TextBlock>
                                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="16,0,0,0">
                                    Click the + button to open new tabs. Ctrl+T also works. Close tabs with the √ó button or Ctrl+W.
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Internal Pages"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="13"
                                       LineHeight="24">
                                Zarla has special internal pages you can access:
                            </TextBlock>
                            
                            <Grid Margin="0,16,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="zarla://newtab" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="New tab page with quick links" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                                
                                <TextBlock Grid.Row="1" Text="zarla://settings" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="Browser settings" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,8,0,0"/>
                                
                                <TextBlock Grid.Row="2" Text="zarla://history" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="Browsing history" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,8,0,0"/>
                                
                                <TextBlock Grid.Row="3" Text="zarla://bookmarks" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="Saved bookmarks" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,8,0,0"/>
                                
                                <TextBlock Grid.Row="4" Text="zarla://downloads" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="Download manager" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,8,0,0"/>
                                
                                <TextBlock Grid.Row="5" Text="zarla://docs" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="This documentation page" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,8,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Security Section -->
                <StackPanel x:Name="SecuritySection" Visibility="Collapsed">
                    <TextBlock Text="Security"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Protect yourself from threats"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,24"/>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Security Levels"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="13"
                                       LineHeight="22">
                                Zarla offers three security levels to match your needs:
                            </TextBlock>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16" Margin="0,16,0,0">
                                <StackPanel>
                                    <TextBlock Text="üü¢ Low" FontWeight="Bold" Foreground="#4CAF50" FontSize="14"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,4,0,0">
                                        Only blocks known malicious websites from Zarla's blocklist. Minimal impact on browsing.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="üü° Medium (Recommended)" FontWeight="Bold" Foreground="#FFC107" FontSize="14"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,4,0,0">
                                        Blocks known threats + analyzes URLs for suspicious patterns like typosquatting and phishing indicators.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="üî¥ High" FontWeight="Bold" Foreground="#F44336" FontSize="14"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,4,0,0">
                                        Full AI-powered scanning. Analyzes every page's URL and content using Zarla AI to detect:
                                    </TextBlock>
                                    <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="12,8,0,0">
                                        ‚Ä¢ Mirror/fake websites (typosquatting)
                                        ‚Ä¢ Phishing attempts
                                        ‚Ä¢ Scam pages
                                        ‚Ä¢ Suspicious content patterns
                                        ‚Ä¢ Malware distribution sites
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource AccentBrush}" FontSize="12" FontStyle="Italic" Margin="0,8,0,0">
                                        ‚ÑπÔ∏è AI security scanning is completely FREE with no usage limits.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Security Warnings"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="13"
                                       LineHeight="22">
                                When Zarla detects a threat, you'll see a warning page with:
                            </TextBlock>
                            
                            <StackPanel Margin="12,12,0,0">
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,6">
                                    ‚Ä¢ The type of threat detected
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,6">
                                    ‚Ä¢ An error code (e.g., ZARLA-SEC-001)
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,6">
                                    ‚Ä¢ Explanation of why it was flagged
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">
                                    ‚Ä¢ Option to proceed anyway (if you trust the site)
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Privacy Section -->
                <StackPanel x:Name="PrivacySection" Visibility="Collapsed">
                    <TextBlock Text="Privacy Features"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Keep your browsing private"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,24"/>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="üö´ Ad Blocker"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" LineHeight="22">
                                Blocks advertisements, popups, and video ads (including YouTube ads). Uses both network-level 
                                blocking and in-page element hiding for comprehensive ad removal.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="üõ°Ô∏è Tracker Blocker"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" LineHeight="22">
                                Prevents websites from tracking your browsing activity across the web. Blocks tracking 
                                pixels, analytics scripts, and third-party cookies.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="üé≠ Fingerprint Protection"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" LineHeight="22">
                                Randomizes your browser fingerprint to prevent websites from identifying you based on 
                                system characteristics like screen size, fonts, and hardware.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- AI Section -->
                <StackPanel x:Name="AISection" Visibility="Collapsed">
                    <TextBlock Text="AI Assistant"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Your intelligent browsing companion"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,24"/>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Using the AI Assistant"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" LineHeight="22">
                                Click the "AI" button in the toolbar to open the assistant panel. You can:
                            </TextBlock>
                            
                            <StackPanel Margin="12,12,0,0">
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,8">
                                    ‚Ä¢ Chat freely without needing to be on a webpage
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,8">
                                    ‚Ä¢ Use "Summarize" to get a summary of the current page
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,8">
                                    ‚Ä¢ Use "Key Points" to extract main points as bullets
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">
                                    ‚Ä¢ Use "Explain" to get a simple explanation of the page
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Built-in Models"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="GPT-OSS 120B" FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="10/day" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Grid>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="GPT-OSS 20B" FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="25/day" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Grid>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Llama 4 Scout 17B" FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="30/day" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Grid>
                            </Border>
                            
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" Margin="0,12,0,0">
                                Limits reset every 24 hours. Add a bypass code in Settings > AI for unlimited usage.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Custom Models"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" LineHeight="22">
                                You can add your own AI models in Settings > AI. Custom models can use any 
                                OpenAI-compatible API endpoint like OpenAI, Claude, or self-hosted models.
                            </TextBlock>
                            
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" LineHeight="22" Margin="0,12,0,0">
                                When adding a custom model, provide:
                            </TextBlock>
                            <StackPanel Margin="12,8,0,0">
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">‚Ä¢ Display Name</TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">‚Ä¢ Model ID (e.g., gpt-4, claude-3-opus)</TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">‚Ä¢ API Key</TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">‚Ä¢ API Base URL (e.g., https://api.openai.com/v1)</TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Network Section -->
                <StackPanel x:Name="NetworkSection" Visibility="Collapsed">
                    <TextBlock Text="Network &amp; DNS"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Configure your connection"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,24"/>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="DNS Over HTTPS (DoH)"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" LineHeight="22">
                                Zarla supports secure DNS using DNS over HTTPS. Available providers:
                            </TextBlock>
                            
                            <StackPanel Margin="12,12,0,0">
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,6">
                                    <Run FontWeight="Medium" Foreground="{DynamicResource TextBrush}">Cloudflare (1.1.1.1)</Run> - Fast and privacy-focused
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,6">
                                    <Run FontWeight="Medium" Foreground="{DynamicResource TextBrush}">Quad9 (9.9.9.9)</Run> - Security-focused with malware blocking
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">
                                    <Run FontWeight="Medium" Foreground="{DynamicResource TextBrush}">Google (8.8.8.8)</Run> - Google's public DNS
                                </TextBlock>
                            </StackPanel>
                            
                            <TextBlock TextWrapping="Wrap" Foreground="#FFC107" FontSize="12" Margin="0,12,0,0">
                                ‚ö†Ô∏è Changes require restarting Zarla to take effect.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Proxy Settings"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" LineHeight="22">
                                Configure a proxy server for all connections. Options:
                            </TextBlock>
                            
                            <StackPanel Margin="12,12,0,0">
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,6">
                                    <Run FontWeight="Medium" Foreground="{DynamicResource TextBrush}">No Proxy</Run> - Direct connection
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,6">
                                    <Run FontWeight="Medium" Foreground="{DynamicResource TextBrush}">System Proxy</Run> - Use Windows settings
                                </TextBlock>
                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">
                                    <Run FontWeight="Medium" Foreground="{DynamicResource TextBrush}">Custom</Run> - Specify address, port, and credentials
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Error Codes Section -->
                <StackPanel x:Name="ErrorCodesSection" Visibility="Collapsed">
                    <TextBlock Text="Error Codes"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Understanding Zarla error codes"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,24"/>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Security Codes (ZARLA-SEC-XXX)"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#F44336"
                                       Margin="0,0,0,16"/>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-SEC-001" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">Known Malicious Site</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        This website is on Zarla's blocklist for distributing malware, phishing, or other malicious activities.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-SEC-002" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">Mirror/Typosquatting Site</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        This website appears to be impersonating a legitimate website. The URL is similar but not the official domain.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-SEC-003" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">Suspicious Website</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        This website has multiple suspicious characteristics that may indicate phishing or scam activity.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-SEC-AI1" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">AI Flagged Threat</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        Zarla's AI security scanner has detected potential threats on this page.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Network Codes (ZARLA-NET-XXX)"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#2196F3"
                                       Margin="0,0,0,16"/>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-NET-001" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">DNS Resolution Failed</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        Unable to resolve the domain name. Check your internet connection or the website may not exist.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-NET-002" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">Connection Timeout</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        The connection to the server timed out. The server may be down or your network may be slow.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-NET-003" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">SSL Certificate Error</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        The website's security certificate is invalid, expired, or not trusted.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-NET-004" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">Proxy Error</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        Unable to connect through the configured proxy server. Check your proxy settings.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Blocking Codes (ZARLA-BLK-XXX)"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#9C27B0"
                                       Margin="0,0,0,16"/>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-BLK-001" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">Blocked by Ad Blocker</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        This content was blocked by Zarla's ad blocker. You can whitelist the site in settings.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="ZARLA-BLK-002" FontFamily="Consolas" Foreground="{DynamicResource AccentBrush}" FontSize="13"/>
                                    <TextBlock FontWeight="Medium" Foreground="{DynamicResource TextBrush}" Margin="0,4,0,2">Blocked by Tracker Blocker</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12">
                                        This tracking request was blocked to protect your privacy.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Shortcuts Section -->
                <StackPanel x:Name="ShortcutsSection" Visibility="Collapsed">
                    <TextBlock Text="Keyboard Shortcuts"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Navigate faster with shortcuts"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,24"/>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel x:Name="ShortcutsPanel"/>
                    </Border>
                </StackPanel>

                <!-- FAQ Section -->
                <StackPanel x:Name="FAQSection" Visibility="Collapsed">
                    <TextBlock Text="Frequently Asked Questions"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Common questions answered"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,24"/>

                    <Border Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Q: Is Zarla free?"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,20">
                                Yes! Zarla is completely free to use. The AI assistant has daily limits on built-in models, 
                                but security scanning is always free with no limits.
                            </TextBlock>

                            <TextBlock Text="Q: Why can't I use YouTube's sidebar?"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,20">
                                Some websites use advanced JavaScript that may conflict with privacy features. 
                                Try disabling fingerprint protection for that specific site if you experience issues.
                            </TextBlock>

                            <TextBlock Text="Q: How do I bypass AI daily limits?"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,20">
                                Enter a bypass code in Settings > AI. You can also add custom models with your own API keys 
                                which don't have daily limits.
                            </TextBlock>

                            <TextBlock Text="Q: Why is a website being blocked?"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,20">
                                Zarla blocks websites for security reasons. Check the error code on the warning page 
                                and look it up in the Error Codes section. You can proceed anyway if you trust the site.
                            </TextBlock>

                            <TextBlock Text="Q: How do I report a false positive?"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">
                                If a legitimate site is being incorrectly flagged, you can lower your security level 
                                or add the site to your trusted list. We're constantly improving our detection systems.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
