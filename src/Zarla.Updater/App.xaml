<Application x:Class="Zarla.Updater.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="UpdateWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#252542"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#6c5ce7"/>
        <SolidColorBrush x:Key="TextBrush" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#a0a0a0"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#00b894"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#ff6b6b"/>
    </Application.Resources>
</Application>
